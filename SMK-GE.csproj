<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>SMK_GE</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>SMK-ge.ico</ApplicationIcon>
    <Authors>SioN</Authors>
    <Description>Move ghost between save files</Description>
    <PackageProjectUrl>siontea.com</PackageProjectUrl>
    <PackageIcon>SMK-ge.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="SMK-ge.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\Pictures\SMK-ge.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MattEqualsCoder.SnesConnectorLibrary" Version="1.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.IO.Ports" Version="9.0.1" />
  </ItemGroup>

</Project>